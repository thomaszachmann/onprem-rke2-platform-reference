# {{ ansible_managed }}
# Allow kubelet (host network) to reach Longhorn CSI and instance-manager
---
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-kubelet-to-longhorn
  namespace: longhorn-system
spec:
  podSelector: {}
  policyTypes:
    - Ingress
  ingress:
    - from:
        - ipBlock:
            cidr: 172.16.0.0/16
      ports:
        - protocol: TCP
          port: 9500
        - protocol: TCP
          port: 9501
        - protocol: TCP
          port: 9502
        - protocol: TCP
          port: 9503
        - protocol: TCP
          port: 9504
        - protocol: TCP
          port: 9808
        - protocol: TCP
          port: 8500
        - protocol: TCP
          port: 8501
